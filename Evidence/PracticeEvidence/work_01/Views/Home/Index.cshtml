@model IEnumerable<work_01.Models.Car>
@{
    ViewData["Title"] = "Index";
}

<div class="row">
    <div class="col">
        <h2>Car List</h2>
        <div class="d-flex justify-content-end">
            <a class="btn btn-outline-primary" asp-action="Create" asp-controller="Home">Add New Car</a>
        </div>
        <table class="table table-bordered table-sm table-striped mt-2">
            <thead class="table-warning">
                <tr>
                    <th>@Html.DisplayNameFor(x => x.CarName)</th>
                    <th>@Html.DisplayNameFor(x => x.Customer.CustomerName)</th>
                    <th>@Html.DisplayNameFor(x => x.Make)</th>
                    <th>@Html.DisplayNameFor(x => x.PurchaseDate)</th>
                    <th>@Html.DisplayNameFor(x => x.Price)</th>
                    <th>@Html.DisplayNameFor(x => x.isAvailable)</th>
                    <th>@Html.DisplayNameFor(x => x.PicturePath)</th>
                    <th></th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model)
                {
                    <tr>
                        <td>@Html.DisplayFor(x => item.CarName)</td>
                        <td>@Html.DisplayFor(x => item.Customer.CustomerName)</td>
                        <td>@Html.DisplayFor(x => item.Make)</td>
                        <td>@Html.DisplayFor(x => item.PurchaseDate)</td>
                        <td>@Html.DisplayFor(x => item.Price)</td>
                        <td>@Html.DisplayFor(x => item.isAvailable)</td>
                        <td>
                            @*<img src="@Url.Content(item.Image)" alt="Photo of @item.CustomerName" width="40"/>*@
                            <img src="~/Images/@item.PicturePath" alt="Photo of @item.CarName" width="40" />
                        </td>
                        <td>
                            <a asp-action="Edit" asp-controller="Home" asp-route-id="@item.CarId" class="btn btn-outline-success btn-sm">Edit</a>
                            <a asp-action="Delete" asp-controller="Home" asp-route-id="@item.CarId" class="btn btn-outline-danger btn-sm">Delete</a>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>


